*
    -webkit-tap-highlight-color: rgba(0,0,0,0) !important

:focus
    outline: none

html,
body
    margin: 0
    padding: 0
    height: 100%

body
    font-family: 'Open Sans', sans-serif !important
    background-color: #f0f0f0 !important
    overflow hidden

.container
    position relative
    box-sizing: border-box
    padding: 20px
    min-height: 100%
    width: 100%
    background-color: transparent

.welcome,
.pad-input,
.pad-output
    position relative
    outline: none
    resize: none
    overflow: auto
    display: block
    width: 100%
    min-height: 100% !important
    margin: 0 auto
    border: 0
    padding: .75rem
    box-sizing: border-box
    background-color: transparent
    font-family: 'Open Sans', sans-serif !important
    font-size 1rem
    line-height: 1.5rem
    color: #666 !important

.pad-input
    position: absolute
    top: 0
    left: 0
    right: 0
    bottom: 0
    padding: 2rem 2rem 4rem
    -webkit-overflow-scrolling: touch

.welcome
    padding-bottom 0
    span
        display block
        color: #999
        font-size: .75rem

.user-image
    position: absolute
    top: 10px
    right: 20px
    width: 38px
    height: 38px

#login-buttons
    position: fixed !important
    right: 0 !important
    bottom: 0 !important
    margin: 0 !important
    top: auto !important
    left: auto !important
    height: 30px !important
    width: 100%
    line-height: 34px
    padding: 0 0 4px 0
    text-align: right
    background-color: #222
    text-align: center
    box-shadow: 2px -8px 20px 0 #f0f0f0
    font-size: .75rem !important
    .login-button
        background: transparent !important
        box-shadow: none !important
        border: 0 !important
        padding: 0
        color: #999
        text-shadow: none
        font-family: 'Open Sans', sans-serif !important
        font-size .75rem
        line-height: 1.5rem
    .text-besides-image
        color: #999
        text-shadow: none
        font-family: 'Open Sans', sans-serif !important
        font-size .75rem
        line-height: 1.5rem
        margin: 0 !important
    .login-image
        top: 4px
        left: -2px
        display: none
    .login-display-name
        color: #555 !important
        &:before
            content: 'You are '