*
    -webkit-tap-highlight-color: rgba(0,0,0,0) !important

:focus
    outline: none

body
    font-family: 'Open Sans', sans-serif !important
    background-color: #f0f0f0 !important

.container
    position: absolute
    min-height: 100% !important
    left: 0
    right: 0
    top: 0
    background-color: transparent
    z-index: 1000
    transition: all .5s linear

.pad-input,
.pad-output
    position: absolute
    top: 0
    left: 0
    -webkit-appearance: none
    outline: none
    resize: none
    overflow: auto
    display: block
    width: 100%
    min-height: 100% !important
    margin: 0 auto
    border: 0
    padding: 20px
    max-width: 1280px
    box-sizing: border-box
    background-color: transparent
    font-family: 'Open Sans', sans-serif !important
    font-size 1rem
    line-height: 1.5rem
    color: #666 !important

.login-buttons-dropdown-align-right
    position: absolute
    top 20px
    right: 60px
    z-index 1000